<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cedarsolutions.cursed"
          android:versionCode="1"
          android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10"
              android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application android:allowBackup="true"
                 android:icon="@drawable/cch"
                 android:label="@string/app_name"
                 android:theme="@style/AppTheme" >

        <activity android:name=".CursedCarHomeMain" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".EditPreferencesActivity" />

        <receiver android:name=".CallEventReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <receiver android:name=".DockEventReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOCK_EVENT" />
            </intent-filter>
        </receiver>

        <receiver android:name=".BootCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".DailyCleanupAlarmReceiver" />
        <receiver android:name=".DailyReportAlarmReceiver" />

        <service android:name=".DockEventCleanupService"
                 android:process=":DockEventCleanupProcess"
                 android:icon="@drawable/cch"
                 android:label="@string/service" />

        <service android:name=".DailyReportService"
                 android:process=":DailyReportProcess"
                 android:icon="@drawable/cch"
                 android:label="@string/service" />

        <activity android:name=".DailyReportActivity"
                  android:label="@string/title_activity_daily_report" />

    </application>

</manifest>
